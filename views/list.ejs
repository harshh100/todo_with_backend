<%- include("hd") -%>

    <div class="box" id="heading">
        <h1>
            <%= tol %>
        </h1>
    </div>

    <div class="box">
        <% newitm.forEach(function(item){ %>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" name="checkbox" value="<%= item._id %>" onchange="this.form.submit()">
                    <p>
                        <%= item.name %>
                    </p>
                </div>
                <input type="hidden" name="listName" value="<%= tol %>" />
            </form>
            <% }); %>

                <form class="item" action="/" method="post">
                    <input type="text" name="newitm" placeholder="New Item">
                    <button type="submit" name="list" value=<%=tol %>>+</button>
                </form>
    </div>

